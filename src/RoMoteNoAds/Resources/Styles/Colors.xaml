<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Roku Purple Theme -->
    <Color x:Key="Primary">#662D91</Color>
    <Color x:Key="PrimaryDark">#4A1F6B</Color>
    <Color x:Key="PrimaryLight">#8B5CB3</Color>
    <Color x:Key="Secondary">#8E44AD</Color>
    <Color x:Key="Tertiary">#9B59B6</Color>

    <!-- Semantic Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#2ECC71</Color>
    <Color x:Key="Warning">#F39C12</Color>
    <Color x:Key="Error">#E74C3C</Color>

    <!-- Light Theme -->
    <Color x:Key="PageBackgroundLight">#FFFFFF</Color>
    <Color x:Key="CardBackgroundLight">#F5F5F5</Color>
    <Color x:Key="TextPrimaryLight">#212121</Color>
    <Color x:Key="TextSecondaryLight">#757575</Color>

    <!-- Dark Theme -->
    <Color x:Key="PageBackgroundDark">#1A1A1A</Color>
    <Color x:Key="CardBackgroundDark">#2D2D2D</Color>
    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDark">#B0B0B0</Color>

</ResourceDictionary>
