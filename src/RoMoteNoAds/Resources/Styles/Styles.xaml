<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════
         PAGE & SHELL STYLES
         ═══════════════════════════════════════════════════════════════════ -->

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource NeuBackgroundLight}, Dark={StaticResource NeuBackgroundDark}}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         CARD & CONTAINER STYLES (Native Apple)
         ═══════════════════════════════════════════════════════════════════ -->

    <Style x:Key="CardFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondarySystemGroupedBackgroundLight}, Dark={StaticResource SecondarySystemGroupedBackgroundDark}}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <Style x:Key="GroupedCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondarySystemGroupedBackgroundLight}, Dark={StaticResource SecondarySystemGroupedBackgroundDark}}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <!-- Legacy GlassCard - now uses native styling -->
    <Style x:Key="GlassCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondarySystemBackgroundLight}, Dark={StaticResource SecondarySystemBackgroundDark}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource SeparatorLight}, Dark={StaticResource SeparatorDark}}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         TYPOGRAPHY (Apple HIG)
         ═══════════════════════════════════════════════════════════════════ -->

    <Style x:Key="LargeTitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="34" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="HeadlineLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="BodyLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="17" />
    </Style>

    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource SecondaryLabelLight}, Dark={StaticResource SecondaryLabelDark}}" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="CaptionLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource SecondaryLabelLight}, Dark={StaticResource SecondaryLabelDark}}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="FootnoteLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TertiaryLabelLight}, Dark={StaticResource TertiaryLabelDark}}" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         BUTTON STYLES (Native Apple)
         ═══════════════════════════════════════════════════════════════════ -->

    <!-- Primary filled button (like iOS default tinted button) -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="20,0" />
    </Style>

    <!-- Secondary/outline button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SystemFillLight}, Dark={StaticResource SystemFillDark}}" />
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="20,0" />
    </Style>

    <!-- Destructive button -->
    <Style x:Key="DestructiveButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SystemFillLight}, Dark={StaticResource SystemFillDark}}" />
        <Setter Property="TextColor" Value="{StaticResource SystemRed}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="20,0" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         REMOTE CONTROL BUTTON STYLES
         ═══════════════════════════════════════════════════════════════════ -->

    <!-- Base remote button -->
    <Style x:Key="RemoteButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SystemFillLight}, Dark={StaticResource SystemFillDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <!-- D-Pad direction buttons -->
    <Style x:Key="DPadButton" TargetType="Button" BasedOn="{StaticResource RemoteButton}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource TertiarySystemFillLight}, Dark={StaticResource TertiarySystemFillDark}}" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="FontSize" Value="22" />
    </Style>

    <!-- D-Pad center OK button (accent color) -->
    <Style x:Key="DPadCenterButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="HeightRequest" Value="80" />
        <Setter Property="WidthRequest" Value="80" />
    </Style>

    <!-- Power button -->
    <Style x:Key="PowerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#20FF3B30, Dark=#40FF3B30}" />
        <Setter Property="TextColor" Value="{StaticResource SystemRed}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="WidthRequest" Value="44" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Volume buttons -->
    <Style x:Key="VolumeButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondarySystemFillLight}, Dark={StaticResource SecondarySystemFillDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Playback buttons -->
    <Style x:Key="PlaybackButton" TargetType="Button" BasedOn="{StaticResource RemoteButton}">
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <!-- Action buttons (Home, Back, etc.) -->
    <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource RemoteButton}">
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="WidthRequest" Value="48" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <!-- Utility/text button -->
    <Style x:Key="UtilityButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource TertiarySystemFillLight}, Dark={StaticResource TertiarySystemFillDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="36" />
        <Setter Property="Padding" Value="16,0" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         LEGACY STYLE ALIASES (for backward compatibility)
         ═══════════════════════════════════════════════════════════════════ -->

    <Style x:Key="GlassButton" TargetType="Button" BasedOn="{StaticResource RemoteButton}" />
    <Style x:Key="GlassDPadButton" TargetType="Button" BasedOn="{StaticResource DPadButton}" />
    <Style x:Key="GlassDPadCenterButton" TargetType="Button" BasedOn="{StaticResource DPadCenterButton}" />
    <Style x:Key="GlassPlaybackButton" TargetType="Button" BasedOn="{StaticResource PlaybackButton}" />
    <Style x:Key="GlassActionButton" TargetType="Button" BasedOn="{StaticResource ActionButton}" />
    <Style x:Key="GlassUtilityButton" TargetType="Button" BasedOn="{StaticResource UtilityButton}" />
    <Style x:Key="GlassVolumeButton" TargetType="Button" BasedOn="{StaticResource VolumeButton}" />
    <Style x:Key="RemoteButtonBase" TargetType="Button" BasedOn="{StaticResource RemoteButton}" />
    <Style x:Key="DPadDirectionButton" TargetType="Button" BasedOn="{StaticResource DPadButton}" />

    <!-- Legacy volume pill frame -->
    <Style x:Key="VolumePillFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondarySystemFillLight}, Dark={StaticResource SecondarySystemFillDark}}" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Padding" Value="8,12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="WidthRequest" Value="50" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         INPUT STYLES
         ═══════════════════════════════════════════════════════════════════ -->

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LabelLight}, Dark={StaticResource LabelDark}}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SystemGray}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource TertiarySystemBackgroundLight}, Dark={StaticResource TertiarySystemBackgroundDark}}" />
    </Style>

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource AccentColor}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════
         LIST/COLLECTION STYLES
         ═══════════════════════════════════════════════════════════════════ -->

    <Style x:Key="GroupedListHeader" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource SecondaryLabelLight}, Dark={StaticResource SecondaryLabelDark}}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="16,24,16,8" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>

    <Style x:Key="ListRowFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondarySystemGroupedBackgroundLight}, Dark={StaticResource SecondarySystemGroupedBackgroundDark}}" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

</ResourceDictionary>
